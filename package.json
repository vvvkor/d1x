{
  "name": "d1x",
  "version": "1.0.1",
  "description": "Experiments on d1",
  "main": "dist/d1.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:css": "postcss -c postcss.config.json",
    "minify:css": "postcss -u cssnano dist/d1.css -o dist/d1.min.css",
    "//build-beautify:js": "uglifyjs --verbose --beautify --comments '/^/*!/' --output ./dist/d1.js ./src/d1.js",
    "build:js": "copyfiles ./src/d1.js ./dist -f",
    "minify:js": "terser ./dist/d1.js -c -m --output ./dist/d1.min.js",
    "//minify:js": "uglifyjs --verbose --comments /^!/ --output ./dist/d1.min.js ./src/d1.js",
    "build:version.dist": "cross-var replace-in-file \"/d1css v\\d+\\.\\d+\\.\\d+/g\" \"d1css v$npm_package_version\" \"dist/*.*\" --isRegex",
    "build:docs": "copyfiles ./src/index.html ./docs -f", 
    "build:version.docs": "cross-var replace-in-file \"/d1css@\\d+\\.\\d+\\.\\d+/g\" \"d1css@$npm_package_version\" \"docs/*.*\" --isRegex",
    "build:version.docs.path": "cross-var replace-in-file \"/(d1\\w*)\\.(css|js)#/g\" \"https://cdn.jsdelivr.net/npm/d1x@$npm_package_version/dist/$1.min.$2\" \"docs/*.*\" --isRegex",
    "build:version.docs.info": "cross-var replace-in-file \"/v\\d+\\.\\d+\\.\\d+/g\" \"v$npm_package_version\" \"docs/*.*\" --isRegex",
    "build:version.docs.cmt": "cross-var replace-in-file \"/REMOVE-/g\" \"\" \"docs/*.*\" --isRegex", 
    "build": "npm run build:css && npm run minify:css && npm run build:js && npm run minify:js && npm run build:version.dist && npm run build:docs && npm run build:version.docs && npm run build:version.docs.path && npm run build:version.docs.info && npm run build:version.docs.cmt",
    "//prepublishOnly": "npm version patch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vvvkor/d1x.git"
  },
  "keywords": [
    "css",
    "javascript",
    "lightweight",
    "micro",
    "framework"
  ],
  "author": "Vadim Korolev <vadimkor@yandex.ru> (https://github.com/vvvkor)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vvvkor/d1x/issues"
  },
  "homepage": "https://github.com/vvvkor/d1x#readme",
  "dependencies": {
  },
  "devDependencies": {
    "terser": "^4.4.3",
    "copyfiles": "^2.1.1",
    "cross-var": "^1.1.0",
    "cssnano": "^3.10.0",
    "perfectionist": "^2.4.0",
    "postcss-calc": "^7.0.1",
    "postcss-cli": "^2.6.0",
    "postcss-custom-properties": "^8.0.11",
    "postcss-discard-comments": "^2.0.4",
    "replace-in-file": "^3.4.4",
    "uglify-js": "^3.6.7"
  }
}
